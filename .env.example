# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eig_database
DB_USER=eig_user
DB_PASSWORD=eig_password

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# 服务端口
BACKEND_PORT=3001
FRONTEND_PORT=3000

# CORS配置
CORS_ORIGIN=http://localhost:3000

# Redis配置 (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 前端环境变量
VITE_API_BASE_URL=http://localhost:3001/api/v1
VITE_APP_TITLE=EIG 企业智能图谱
VITE_APP_VERSION=1.0.0

# 监控配置 (可选)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3003
GRAFANA_PASSWORD=admin

# 日志配置 (可选)
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# Nginx配置 (可选)
NGINX_PORT=80
NGINX_SSL_PORT=443

# 开发环境配置
NODE_ENV=development
LOG_LEVEL=debug

# 测试环境配置
TEST_DB_NAME=eig_test_db
CLEANUP_TEST_DB=false

# 邮件配置 (可选)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# 文件上传配置
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=xlsx,csv,json

# 安全配置
SESSION_SECRET=your-session-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 第三方服务配置 (可选)
# 企业信息查询API
ENTERPRISE_API_KEY=
ENTERPRISE_API_URL=

# 地图服务配置
MAP_API_KEY=

# 监控和错误报告
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# 缓存配置
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# 搜索引擎配置 (可选)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=eig

# 消息队列配置 (可选)
RABBITMQ_URL=amqp://localhost:5672
QUEUE_NAME=eig_tasks

# SSL证书路径 (生产环境)
SSL_CERT_PATH=/etc/ssl/certs/eig.crt
SSL_KEY_PATH=/etc/ssl/private/eig.key

# 数据备份配置
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=